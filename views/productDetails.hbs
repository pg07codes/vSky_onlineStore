{{>navbar}}
<div class="container images mt-3">
    <div class="row justify-content-around">
        <div class="col-md-4">
            <img src="{{p.fImage}}" style="margin:5px; width:480px; height:300px;" alt="shirt-front" class="img-fluid">
        </div>
        <div class="col-md-4">
            <img src="{{p.bImage}}" style="margin:5px; width:480px; height:300px;" alt="shirt-front" class="img-fluid">
        </div>
    </div>
</div>
<div class="container mt-5 mb-5 productDetails">
    <div class="row">
        <div class="col-md-12">
            <h3 style="border-bottom: solid 2px rgba(200,200,200,0.8); padding:5px;"><i class="fas fa-arrow-right" style="color: green; padding:2px;"></i>{{p.name}}</h3>
        </div>
        <div class="col-md-8">
            <h4 style="border-left: green solid 4px; padding: 5px;margin:5px;">Our Price: <i class="fas fa-rupee-sign"></i>{{p.price}}</h4>
            <p style="padding:5px;">Original Retail Price: <i class="fas fa-rupee-sign"></i> <strike>{{p.mrp}}</strike></p>
        </div>
        <div class="col-md-4">
            <h3 style="padding:5px;">Sizes available:</h3>
            <span style="padding:6px; border: solid black 1px; margin:4px;">S</span>
            <span style="padding:6px; border: solid black 1px; margin:4px;">M</span>
            <span style="padding:6px; border: solid black 1px; margin:4px;">L</span>
            <span style="padding:6px; border: solid black 1px; margin:4px;">XL</span>
            <span style="padding:6px; border: solid black 1px; margin:4px;">2XL</span>
            <span style="padding:6px; border: solid black 1px; margin:4px;">3XL</span>
        </div>
        <div class="col-md-12 mt-3">
            <a href="/prod/buy/{{p.id}}" style="float: right; margin-right:6.5vw;"><input type="button" class="btn btn-success" value="BUY"></a>
            <input type="button" style="float: right; margin-right:1vw;" class="btn btn-danger add" onclick='save({{StringifiedP}})' value="ADD TO CART">
        </div>
    </div>
</div>

{{>productInfo}}

<div class="container-fluid mt-4 mb-4">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <h2>more shirts you may like..</h2>
        </div>
    </div>
</div>

{{>recommendations}}
<script>
    function save(p){
        let stringP=JSON.stringify(p)
        localStorage.setItem(`product${p.id}`,stringP)
        alert("Product Added to Cart")
    }
</script>

<style>
    .images img{
        transform: scale(1);
        transition: transform 1s, box-shadow 800ms;
    }
    .images img:hover{
        transform: scale(1.2);
        transition: transform 1s;
        box-shadow: grey 2px 1px 4px;
    }
</style>

