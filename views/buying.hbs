{{>navbar}}
<div class="container mt-4 mb-4">
    <form method="post" action="/placeOrder">
        <div class="form-group">
            <label for="name">Full Name</label>
            <input type="text" class="form-control" name="name" id="name" placeholder="Your full name" required>
        </div>
        <div class="form-group">
            <label for="number">Contact Number</label>
            <input type="number" pattern="/[0-9]{10}/" class="form-control" name="phnNumber" id="number" placeholder="Your 10 digit contact number" required>
        </div>
        <div class="form-group">
            <label for="size">Size</label>
            <select name="size" id="size" class="form-control" required>
                <option value="S">S</option>
                <option value="M">M</option>
                <option value="L">L</option>
                <option value="XL">XL</option>
                <option value="2XL">2XL</option>
                <option value="3XL">3XL</option>
            </select>
        </div>
        <div class="row">
            <div class="col-md-7">
                <span>ITEM NAME</span>
                <h2><i class="fas fa-arrow-right" style="color: grey; margin:5px;"></i>{{p.name}}</h2>
            </div>
            <div class="col-md-5">
                <span>PAYABLE</span>
                <h2 id="amount"><i class="fas fa-arrow-right" style="color: grey; margin:5px;"></i>Total Amount:<i class="fas fa-rupee-sign"></i>{{p.price}}</h2>
            </div>
        </div>
        <div class="form-group">
            <label for="quantity">Quantity</label>
            <select name="quantity" onchange="updateAmount({{p.price}})" id="quantity" class="form-control" required>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
                <option value="6">6</option>
                <option value="7">7</option>
                <option value="8">8</option>
                <option value="9">9</option>
            </select>
        </div>
        <div class="form-group">
            <label for="address">Delivery Address</label>
            <textarea class="form-control" name="address" id="address" rows="3" placeholder="where to deliver the product" required></textarea>
        </div>
        <div class="form-group">
            <label for="landmark">Nearest Landmark</label>
            <input type="text" class="form-control" name="landmark" id="landmark" placeholder="nearest landmark" required>
        </div>
        <div class="form-group">
            <label for="pin">PinCode</label>
            <input type="number" pattern="/[0-9]{6}/" class="form-control" name="pin" id="pin" placeholder="Pin Code" required>
        </div>
        <button type="submit" id="order" class="btn btn-success">Place Order</button>
    </form>
</div>
{{>footer}}
<script>
    $quantity=$("#quantity")
    $amount=$("#amount")
    function updateAmount(price){
        $amount.empty()
        $amount.append(`<i
                        class="fas fa-arrow-right"
                        style="color: grey; margin:5px;">
                        </i>Total Amount:<i class="fas fa-rupee-sign"></i>
                        ${$quantity.val()*price}`)
    }
</script>



