<div class="container">
    <form method="post" action="/admin/addCollege">
        <div class="form-group">
            <label for="newCollege">College</label>
            <input type="text" class="form-control" name="newCollege" id="newCollege" placeholder="College name" required>
        </div>
        <button type="submit" class="btn btn-success">ADD</button>
    </form>
</div>

<div class="container mt-5">
<form method="post" action="/admin/add">
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" name="name" id="name" placeholder="Enter name" required>
    </div>
    <div class="form-group">
        <label for="desc">Description</label>
        <input type="text" class="form-control" name="desc" id="desc" placeholder="Enter short description" required>
    </div>
    <div class="form-group">
        <label for="mrp">Market Retail Price</label>
        <input type="number" class="form-control" name="mrp" id="mrp" placeholder="Market Retail Price" required>
    </div>
    <div class="form-group">
        <label for="dPrice">Discounted Price</label>
        <input type="number" class="form-control" name="dPrice" id="dPrice" placeholder="Discounted Price" required>
    </div>
    <div class="form-group">
        <label for="fImage">Front-Image</label>
        <input type="url" class="form-control" name="fImage" id="fImage" placeholder="Front side of shirt image" required>
    </div>
    <div class="form-group">
        <label for="bImage">Back-Image</label>
        <input type="url" class="form-control" name="bImage" id="bImage" placeholder="Back side of shirt image" required>
    </div>
    <div class="form-group">
        <label for="college">College</label>
        <select name="college" id="college" class="form-control" required>
            <!--options generated dynamically-->
        </select>
    </div>
    <button type="submit" class="btn btn-success">ADD</button>
</form>
</div>
<script>
    $cOptions=$(".form-group #college")
    $.get("/prod/getAllColleges",(college)=>{
        college.forEach((i)=>{
            $cOptions.append(`
            <option value="${i.cId}">${i.cName}</option>
            `)
        })
    })

</script>
